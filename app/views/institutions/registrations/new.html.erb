<div class="container">
  <p align="center"><strong>Cadastre-se com o</strong> <a href="#">Facebook</a> ou <a href="#"> Google</a></p>

  <hr class="hr-text" data-content="ou">

  <div class="row">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col s12 m6 offset-m3"}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <div class="row">
          <div class="input-field col s6">
            <%= f.input :name, label: 'Nome da instituição', required: true, autofocus: true %>
          </div>
          <div class="input-field col s6">
            <%= f.input :cnpj, label: 'CNPJ', required: true %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.input :email, required: true, label: 'Email', autofocus: true, label: "Email" %>
          </div>

          <div class="input-field col s12">
            <%= f.input :password, required: true, label: 'Senha' %>
          </div>

          <div class="input-field col s12">
            <%= f.input :password_confirmation, label: 'Confirmar senha', required: true %>
          </div>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "col s12 red accent-2" %>
        </div>
      </div>

    <% end %>

  </div>
</div>
