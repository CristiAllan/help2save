<div class="container">
  <h4 class="center">Editar conta</h4>

  <div class="row">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "col s12 m6 offset-m3" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="row">
          <div class="input-field col s6">
            <%= f.input :first_name, label: 'Primeiro Nome', required: true, autofocus: true %>
          </div>
          <div class="input-field col s6">
            <%= f.input :last_name, label: 'Último Nome', required: true %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.input :email, label: 'Endereço de email',required: true %>
          </div>
          <div class="input-field col s12">
            <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          </div>
          <div class="input-field col s12">
            <%= f.input :password_confirmation, label: 'Confirmar senha', required: false %>
          </div>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Cadastre-se", class: "col s12 red accent-2" %>
        </div>
      </div> <!-- form-inputs -->

    <% end %>

  </div> <!-- .row -->
  
  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div> <!-- .container -->
