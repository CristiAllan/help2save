<!DOCTYPE html>
<html>
  <head>
    <title>Help2save</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main>
      <%= render partial: "layouts/shared/header"%>

      <% if current_voluntary || current_institution %>
        <% if current_voluntary %>
          <ul id="slide-out" class="side-nav">
            <li>
              <div class="userView">
                <div class="background light-blue lighten-1">
                </div>
                <!-- <a href="#!user"><img class="circle" src="images/yuna.jpg"></a> -->
                <a href="#!name"><span class="white-text name"> <%= "#{current_voluntary.first_name} #{current_voluntary.last_name}" %> </span></a>
                <a href="#!email"><span class="white-text email"> <%= current_voluntary.email %> </span></a>
              </div>
            </li>
            <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
            <li><a href="#!">Second Link</a></li>
            <li><div class="divider"></div></li>
            <li><a class="subheader">Subheader</a></li>
            <li><a class="waves-effect " href="#!">Third Link With Waves</a></li>
            <li><%= link_to "Sair", destroy_voluntary_session_path, method: :delete %></li>
          </ul>
        <% end %>
        <% if current_institution %>
          <ul id="slide-out" class="side-nav">
            <li>
              <div class="userView">
                <div class="background light-blue lighten-1">
                </div>
                <!-- <a href="#!user"><img class="circle" src="images/yuna.jpg"></a> -->
                <a href="#!name"><span class="white-text name"> <%= current_institution.name %> </span></a>
                <a href="#!email"><span class="white-text email">jdandturk@gmail.com</span></a>
              </div>
            </li>
            <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
            <li><a href="#!">Second Link</a></li>
            <li><div class="divider"></div></li>
            <li><a class="subheader">Subheader</a></li>
            <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
            <li><%= link_to "Sair", destroy_institution_session_path, method: :delete %></li>
          </ul>
        <% end %>


        <div class="fixed-action-btn">
          <a href="#" data-activates="slide-out" class="profile-sidebar-collapse btn-floating btn-large red"><i class="material-icons">menu</i></a>
        </div>

      <% end %>

      <%= yield %>
      <%= render partial: "layouts/shared/footer"%>
    </main>
    <script type="text/javascript">
      $(".profile-sidebar-collapse").sideNav();
    </script>
  </body>
</html>
