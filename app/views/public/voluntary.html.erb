<div class="row"></div>
<div class="container section white">
  <div class="row">
    <div class="col s12 m3 l3">
      <div class="row">
        <div class="card medium">
          <div class="card-image circle profile-image">
            <img src="http://lorempixel.com/100/190/nature/6">
          </div>
          <div class="card-content">
            <a class="btn waves-effect waves-light red lighten-2" type="submit" name="action">Trabalhos
              <i class="material-icons right">send</i>
            </a>
          </div>

          <div class="card-action center grey lighten-4">
            <div class="col s4 m4 l4"><a href="#"><i class="material-icons small">accessibility</i></a></div>
            <div class="col s4 m4 l4"><a href="#"><i class="material-icons small">accessibility</i></a></div>
            <div class="col s4 m4 l4"><a href="#"><i class="material-icons small">accessibility</i></a></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12 m9 l9">
      <div class="profile-details">
        <div class="row">

          <h4 class="red-text text-lighten-2"><%= "#{@voluntary.first_name} #{@voluntary.last_name}" %></h4>

          <p class="flow-text font-size"><%= @voluntary.description %></p>
        </div>
        <div class="row">
          <h4 class="red-text text-lighten-2">Hist√≥rico de Trabalhos</h4>
          <% @jobs.each do |j| %>
            <ul class="collection">
              <li class="collection-item avatar">
                <img src="http://lorempixel.com/100/190/nature/6" alt="" class="circle">
                <span class="title white red-text"><%= j.title %></span>
                <p><%= j.description.truncate(50) %></p>
                <a href="#!" class="secondary-content"><i class="material-icons">input</i></a>
              </li>
            </ul>
          <% end %>

        </div>
        <div class="row">
          <h4 class="red-text text-lighten-2">Reviews das entidades</h4>

              <% @jobs.each do |l| %>

                <div class="col s12 m12 l12">

                  <div class="card horizontal z-depth-4 hoverable">
                    <div class="card-image">
                      <blockquote>
                        <img src="http://lorempixel.com/100/190/nature/6">
                      </blockquote>
                    </div>

                    <div class="card-stacked">
                      <div class="card-content">
                        <h5 class="header red-text text-lighten-1"><%= "#{l.title}" %></h5>
                        <p class="flow-text font-size"><%= l.description.truncate(140) %></p>
                      </div>
                      <div class="card-action">
                        <!--link para detalhe do job-->
                      </div>
                    </div>
                  </div>
                </div>

            <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
